<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="page_text">
       <item name="android:padding">12dp</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:background">#5000000</item>
       <item name="android:textColor">white</item>
       <item name="android:layout_gravity">center</item>
    </style>

    <style name="btn_custom1">
       <item name="android:padding">8dp</item>
       <item name="android:layout_margin">6dp</item>
       <item name="android:textColor">@color/white</item>
       <item name="android:cornerRadius">4dp</item>
       <item name="android:background">@color/red</item>
       <item name="android:state_pressed">@style/btn_custom1_pressed</item>
       <item name="android:state_disable">@style/btn_custom1_disable</item>
    </style>
    <style name="btn_custom1_pressed">
        <item name="android:background">@color/red_press</item>
    </style>
    <style name="btn_custom1_disable">
       <item name="android:textColor">@color/light_gray</item>
       <item name="android:background">#faa</item>
    </style>
    <style name="line_spit">
       <item name="android:layout_height">4dp</item>
       <item name="android:layout_width">match_parent</item>
    </style>
    <style name="textStyle">
       <item name="android:textSize">12sp</item>
       <item name="android:padding">8dp</item>
       <item name="android:textColor">#333</item>
       <item name="android:background">#eee</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editStyle">
       <item name="android:textColor">#333</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imageStyle">
       <item name="android:background">#eee</item>
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginBottom">12dp</item>
    </style>
</resources>